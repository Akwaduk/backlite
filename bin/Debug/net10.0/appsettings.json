{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=Data/app.db;Cache=Shared"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DbBackupManager": {
    "SSH": {
      "DefaultPort": 22,
      "TimeoutSeconds": 30,
      "KeepAliveIntervalSeconds": 5,
      "MaxRetries": 3
    },
    "Security": {
      "GlobalAllowedRoots": [
        "/home",
        "/var/www",
        "/opt",
        "/srv",
        "/backup"
      ],
      "AllowSudo": true,
      "MaskSecretsInLogs": true
    },
    "Jobs": {
      "MaxConcurrentJobs": 3,
      "JobTimeoutMinutes": 60,
      "LogRetentionDays": 30
    },
    "Storage": {
      "TempWorkspaceDirectory": "./temp",
      "BackupRootDirectory": "./backups",
      "MaxBackupSizeGB": 10
    },
    "Backup": {
      "DefaultCompressionLevel": 6,
      "DefaultRetentionCount": 10,
      "VerifyChecksums": true,
      "PreserveTimestamps": true
    }
  }
}
